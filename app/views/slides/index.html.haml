%link{:rel => "stylesheet", :src => "//maxcdn.bootstrapcdn.com/bootstrap/3.3.2/css/bootstrap.min.css"}/

.container
  .row
    - @slides.each do |slide|
      = link_to 'Show', slide
      = link_to 'Edit', edit_slide_path(slide)
      = link_to 'Destroy', slide, method: :delete, data: { confirm: 'Are you sure?' }
      = slide.title
      = slide.caption
      = slide.path
      = slide.end_date
      = image_tag slide.path
      %br/
      %br/

  %br/
  = link_to 'New Slide', new_slide_path


