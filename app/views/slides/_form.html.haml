.container
  .row.well
    .form-inline
      = form_for(@slide) do |f|
        - if @slide.errors.any?
          #error_explanation
            %h2
              = pluralize(@slide.errors.count, "error")
              prohibited this slide from being saved:
            %ul
              - @slide.errors.full_messages.each do |message|
                %li= message
        .input-group
          = f.label "Title:"
        .form-group
          = f.text_field :title
        .input-group
          = f.label "Caption: (optional)"
        .form-group
          = f.text_field :caption
        %br/
        %br/
        .input-group
          = f.label "File to upload:"
        .form-group
          = f.file_field :file
        %br/
        %br/
        .input-group
          = f.label "End Date:(stubbed)"
        .form-group
          = f.datetime_select :end_date
        %br/
        %br/
        .form-group
          = f.submit class: "btn btn-large btn-success"
